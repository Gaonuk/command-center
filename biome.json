{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true,
		"ignore": [
			"vite.config.ts", 
			"tailwind.config.js", 
			"postcss.config.js", 
			"pnpm-lock.yaml", 
			"package-lock.json"
		]
	},
	"linter": {
		"enabled": true,
		"ignore": [
			"vite.config.ts", 
			"tailwind.config.js", 
			"postcss.config.js", 
			"pnpm-lock.yaml", 
			"package-lock.json",
			"src/components/ui/*"
		],
		"rules": {
			"recommended": true
		}
	}
}
